<h1>
  <%= @mytale.title %>
</h1>

<div class="section">
  <div class="col span_2_of_3">
    <p>
      <%= @mytale.story.summary %>
    </p>
    <span class="num-alt large">
      <%= link_to "Read story now!", read_story_mytale_path(story_id: @mytale.story_id, id: @mytale.id) %>
    </span>

    <h3>
      Additional Options
    </h3>

    <p class="num-alt">
      <%= link_to "Print full story", print_story_mytale_path(story_id: @mytale.story_id, id: @mytale.id), class: "print-link"%>

      <% if is_owner? %>
      <%= link_to "Edit", edit_story_mytale_path(story_id: @mytale.story_id, mytale_id: @mytale.id) %> <%= link_to "Delete", story_mytale_path(story_id: @mytale.story_id, mytale_id: @mytale.id), method: :delete %>
    </p>
    <% end %>
  </div>
  <div class="col span_1_of_3">
    <%= image_tag(@image.url) %>
  </div>

  <div class="section">
      <h3>Save for later</h3>
      <% if is_owner? %>
      View this story and others you've created on your <%= link_to "profile page", user_path(current_user.id) %>.
      <% else %>
      <p>
        You can always access this story at:
      </p>
      <%= link_to "#{story_mytale_url(story_id: @mytale.story_id, id: @mytale.id)}", story_mytale_url(story_id: @mytale.story_id, id: @mytale.id) %>
      <% end %>
    </p>
  </div>
</div>
